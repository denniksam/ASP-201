@model ASP_201.Models.Forum.ForumPostViewModel

    <div class="media g-mb-30 media-comment row">
        <div class="col col-1">
            <img class="d-flex g-width-100 rounded-circle g-mt-3 g-mr-15" 
                src="@Model.AuthorAvatarUrl" alt="Avatar">
        </div>

        <div class="col col-10 media-body u-shadow-v18 g-bg-secondary g-pa-30">
            <div class="g-mb-15">
                <h5 class="h5 g-color-gray-dark-v1 mb-0">@Model.AuthorName</h5>
                <span class="g-color-gray-dark-v4 g-font-size-12">5 days ago</span>
            </div>
            <p>
                @Model.Content
            </p>
            <ul class="list-inline d-flex my-0">
                <li class="list-inline-item g-mr-20">
                    <a class="u-link-v5 g-color-gray-dark-v4 g-color-primary--hover" href="#!">
                        <i class="fa fa-thumbs-up g-pos-rel g-top-1 g-mr-3"></i>
                        178
                    </a>
                </li>
                <li class="list-inline-item g-mr-20">
                    <a class="u-link-v5 g-color-gray-dark-v4 g-color-primary--hover" href="#!">
                        <i class="fa fa-thumbs-down g-pos-rel g-top-1 g-mr-3"></i>
                        34
                    </a>
                </li>
                <li class="list-inline-item ms-auto">
                    <a class="u-link-v5 g-color-gray-dark-v4 g-color-primary--hover" href="#!">
                        <i class="fa fa-reply g-pos-rel g-top-1 g-mr-3"></i>
                        Reply
                    </a>
                </li>
            </ul>
        </div>
    </div>
